/**
 * @tutorial https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
 */
{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2015", "dom"],
    "preserveConstEnums": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": false
  }
}
